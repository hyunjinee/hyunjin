{
  "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
  "extends": ["../../biome.json"],
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/.contentlayer",
      "!**/dist",
      "!**/build",
      "!**/.cache",
      "!**/public",
      "!**/stories"
    ]
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noUnknownAtRules": "error"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  }
}
